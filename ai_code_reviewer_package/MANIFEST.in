# AI Code Reviewer Package - Manifest File
# Specificeer welke files meegenomen worden in de distributie

# Core documentation
include README.md
include USAGE.md  
include INSTALL.md
include BUILD.md
include LICENSE
include CHANGELOG.md

# Configuration files
include pyproject.toml
include setup.py
include setup.cfg

# Templates en configs
recursive-include ai_code_reviewer/templates *
recursive-include ai_code_reviewer/configs *
recursive-include ai_code_reviewer/bmad_integration *

# Exclude development files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
recursive-exclude . __pycache__
recursive-exclude . *.py[co]
recursive-exclude . *.orig
recursive-exclude . *.rej
recursive-exclude . .coverage
recursive-exclude . .tox
recursive-exclude . .pytest_cache

# Include test configuration maar exclude test code
exclude test-ai-review/
exclude tests/

# Exclude build artifacts  
exclude build/
exclude dist/
exclude *.egg-info/